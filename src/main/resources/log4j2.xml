<Configuration status = "WARN">
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d - %C [%M] - (%p) %m %n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="C:\log\studentManagement.log" filePattern="application_log-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d - %C [%M] - (%p) %m %n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <!-- Turn off all other logs -->
       <!-- <Logger name="org.springframework" level="off" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger> -->
       <!-- <Logger name="com.zaxxer.hikari" level="off" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>-->

        <Logger name="org.hibernate" level="off" additivity="false">
            <AppenderRef ref="ApplicationConsole"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <!--<Logger name="com.i2i.sms" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>-->
    </Loggers>
</Configuration>

